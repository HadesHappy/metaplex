{
  "name": "@metaplex/graphql",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/metaplex/graphql"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "dev": "ts-node src/index.ts",
    "lint:format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint": "npm run lint:format && npm run lint:eslint -- --fix",
    "build": "npm run clean && tsc",
    "start": "node dist/server.js",
    "server": "ts-node-dev --transpile-only src/server.ts",
    "tsc": "tsc",
    "tscCheck": "tsc --noEmit",
    "setup:@metaplex/js": "cd node_modules/@metaplex/js-sdk && yarn && yarn build && cd .. && rm -rf ./js && ln -s ./js-sdk/api/lib ./js",
    "postinstall": "npm run setup:@metaplex/js"
  },
  "license": "MIT",
  "devDependencies": {
    "@metaplex/js-sdk": "https://github.com/metaplex/js.git#main-gql",
    "@types/bn.js": "^5.1.0",
    "@types/bs58": "^4.0.1",
    "@types/dedent": "^0.7.0",
    "@types/graphql": "^14.5.0",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.2",
    "husky": "^4.3.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --cache --fix --max-warnings=0"
    ],
    "*.{js,json}": "prettier --write"
  },
  "dependencies": {
    "@solana/spl-token": "^0.1.8",
    "@solana/spl-token-registry": "^0.2.247",
    "@solana/wallet-adapter-base": "^0.4.1",
    "@solana/web3.js": "^1.21.0",
    "apollo-datasource": "^3.1.0",
    "apollo-server": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "bn.js": "^5.1.3",
    "bs58": "^4.0.1",
    "dedent": "^0.7.0",
    "graphql": "^15.5.1",
    "graphql-subscriptions": "^1.2.1",
    "mkdirp": "^1.0.4",
    "moment": "^2.29.1",
    "nexus": "^1.1.0",
    "subscriptions-transport-ws": "^0.9.19"
  }
}
